<Page
    x:Class="MyCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Canvas HorizontalAlignment="Left" Height="1080" VerticalAlignment="Top" Width="1920" Background="#FF292727">
            <TextBox x:ConnectionId='2' x:Name="numinput" Canvas.Left="360" TextWrapping="Wrap" Text="" Canvas.Top="111" Width="215" Height="42" TextAlignment="Right" BorderBrush="#FF131212" Background="#FF131212" FontFamily="Poppins"/>
            <TextBox x:ConnectionId='3' x:Name="answerdisplay" Canvas.Left="360" TextWrapping="Wrap" Text="" Canvas.Top="153" Width="215" Height="42" TextAlignment="Right" BorderBrush="#FF131212" Background="#FF131212" FontFamily="Poppins"/>

            <Button x:ConnectionId='4' x:Name="num7" Content="7" Canvas.Left="360" Canvas.Top="200" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='5' x:Name="num8" Content="8" Canvas.Left="415" Canvas.Top="200" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='6' x:Name="num9" Content="9" Canvas.Left="470" Canvas.Top="200" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='7' x:Name="num4" Content="4" Canvas.Left="360" Canvas.Top="245" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='8' x:Name="num5" Content="5" Canvas.Left="415" Canvas.Top="245" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='9' x:Name="num6" Content="6" Canvas.Left="470" Canvas.Top="245" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='10' x:Name="num1" Content="1" Canvas.Left="360" Canvas.Top="290" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='11' x:Name="num2" Content="2" Canvas.Left="415" Canvas.Top="290" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='12' x:Name="num3" Content="3" Canvas.Left="470" Canvas.Top="290" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />
            <Button x:ConnectionId='13' x:Name="num0" Content="0" Canvas.Left="415" Canvas.Top="335" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF060202" FontFamily="Poppins"                   />

            <Button x:ConnectionId='14' x:Name="divide" Content="/" Canvas.Left="525" Canvas.Top="200" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF131212" FontFamily="Poppins"                     />
            <Button x:ConnectionId='15' x:Name="multiply" Content="x" Canvas.Left="525" Canvas.Top="245" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF131212" FontFamily="Poppins"                       />
            <Button x:ConnectionId='16' x:Name="subtract" Content="-" Canvas.Left="525" Canvas.Top="290" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF131212" FontFamily="Poppins"                       />
            <Button x:ConnectionId='17' x:Name="add" Content="+" Canvas.Left="525" Canvas.Top="335" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF131212" FontFamily="Poppins"                   RenderTransformOrigin="0.6,0.25"/>
            <Button x:ConnectionId='18' x:Name="dot" Content="." Canvas.Left="470" Canvas.Top="335" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF131212" FontFamily="Poppins"                  />
            <Button x:ConnectionId='19' x:Name="clear" Content="C" Canvas.Left="360" Canvas.Top="335" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF131212" FontFamily="Poppins"                    />

            <Button x:ConnectionId='20' x:Name="equals" Content="=" Canvas.Left="415" Canvas.Top="380" Height="40" Width="160" Foreground="#FFF9F9F9" Background="#FF131212" FontFamily="Poppins"                     />
            <Button x:ConnectionId='21' x:Name="percent" Content="%" Canvas.Left="360" Canvas.Top="380" Height="40" Width="50" Foreground="#FFF9F9F9" Background="#FF131212" FontFamily="Poppins"                      />
        </Canvas>

    </Grid>
    
</Page>

